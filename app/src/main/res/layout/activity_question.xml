<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@drawable/bg_introduce"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_call"
                android:background="@drawable/call"
                android:layout_marginRight="4dp"
                android:layout_width="56dp"
                android:layout_height="56dp"/>

            <Button
                android:id="@+id/btn_help"
                android:background="@drawable/hepl"
                android:layout_marginRight="2dp"
                android:layout_width="56dp"
                android:layout_height="56dp"/>

            <Button
                android:id="@+id/btn_percent50"
                android:background="@drawable/percent50"
                android:layout_marginLeft="2dp"
                android:layout_width="56dp"
                android:layout_height="56dp"/>

            <Button
                android:id="@+id/btn_restart"
                android:background="@drawable/restart"
                android:layout_marginLeft="4dp"
                android:layout_width="56dp"
                android:layout_height="56dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_time_question"
            android:background="@drawable/clock"
            android:gravity="center"
            android:layout_marginBottom="132dp"
            android:layout_marginRight="8dp"
            android:text="60"
            android:textSize="56dp"
            android:layout_marginTop="64dp"
            android:textColor="@color/white"
            android:layout_width="128dp"
            android:layout_height="128dp"/>

        <RelativeLayout
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/atp__bg_circle_anim"
                android:layout_width="256dp"
                android:layout_height="256dp"/>
            
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                
                <TextView
                    android:id="@+id/tv_question"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:text="Question"
                    android:padding="12dp"
                    android:textSize="14dp"
                    android:background="@drawable/bg_choose2"
                    android:layout_width="300dp"
                    android:layout_height="120dp"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="A"
                            android:padding="8dp"
                            android:gravity="center"
                            android:textColor="#FFFFFF"
                            android:textSize="14dp"
                            android:id="@+id/answer_a"
                            android:background="@drawable/bg_choose1"
                            android:layout_width="150dp"
                            android:layout_height="56dp"/>

                        <TextView
                            android:text="C"
                            android:padding="8dp"
                            android:gravity="center"
                            android:textColor="#FFFFFF"
                            android:textSize="14dp"
                            android:id="@+id/answer_c"
                            android:background="@drawable/bg_choose1"
                            android:layout_width="150dp"
                            android:layout_height="56dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="B"
                            android:padding="8dp"
                            android:gravity="center"
                            android:textColor="#FFFFFF"
                            android:textSize="14dp"
                            android:id="@+id/answer_b"
                            android:background="@drawable/bg_choose1"
                            android:layout_width="150dp"
                            android:layout_height="56dp"/>

                        <TextView
                            android:text="D"
                            android:padding="8dp"
                            android:gravity="center"
                            android:textSize="14dp"
                            android:textColor="#FFFFFF"
                            android:id="@+id/answer_d"
                            android:background="@drawable/bg_choose1"
                            android:layout_width="150dp"
                            android:layout_height="56dp"/>

                    </LinearLayout>

                </LinearLayout>
                
            </LinearLayout>
            
        </RelativeLayout>

    </LinearLayout>
</layout>